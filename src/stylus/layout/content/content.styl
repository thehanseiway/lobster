/*=============================================================================
Content
=============================================================================*/

.wrapper {
    min-height: 100%;
    height: auto !important;
    height: 100%;
    margin: 0 auto rem(-65);
    padding-bottom: rem(145);
}

.content {
    margin-top: rem(74);
}

+above(1200px) {
    .container {
        width: 1200px;
    }
}

section {
    .h1 {
        margin-top: rem(70);
        color: $red;
        font-family: 'Helvetica';
        font-size: 80px;
    }

    .h3 {
        font-size: 40px;
    }

    .h1,
    .h3 {
        margin-bottom: 0;
    }

    p {
        margin-bottom: 0;
        margin-top: 34px;
        line-height: 2;
        font-size: 20px;
    }

    padding-bottom: rem(80);
}

.lobster-intro {
    margin-top: rem(80);
    margin-bottom: rem(80);
}
