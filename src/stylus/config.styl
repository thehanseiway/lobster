//==============================================================================
// Global Settings
//==============================================================================

@font-face {
    font-family: 'OpenSans';
    src: url('../fonts/OpenSans-CondLight.ttf');
    font-weight: 400;
}

@font-face {
    font-family: 'OpenSans';
    src: url('../fonts/OpenSans-CondBold.ttf');
    font-weight: 600;
}

@font-face {
    font-family: 'Helvetica';
    src: url('../fonts/HelveticaNeueUltraLight.ttf');
    font-weight: 400;
}

// Colors
$white = #fff;
$grey = #ccc;
$black = #000;
$red = #df3438;

// Socials colors
$fb = #3a5795;
$tw = #1da1f2;
$inst = #125688;
$in = #00a0dc;
$skype = #00AFF0;

// Animations options
$trans-time = 0.3s;

// Opacity
$op-white = 0.7;
$op-black = 0.7;

// Border width
$bw = 2px;

// Help functions
rem(px) {
    (px / 16)rem
}
